{
  "manifest_version": 3,
  "name": "Google Meet Live Co-Pilot",
  "version": "1.0.0",
  "description": "Real-time audio transcription and AI assistance for Google Meet",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "offscreen"
  ],
  "host_permissions": [
    "https://meet.google.com/*",
    "ws://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Co-Pilot Settings"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "css": ["content-script.css"],
      "run_at": "document_end"
    }
  ]
}